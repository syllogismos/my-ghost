{{!< default}}
<div class="large-12 medium-12 small-12 columns">
    <article class="large-12 medium-12 small-12 columns {{post_class}}" id="post-{{id}}"> 
        {{#post}}
        <header class="post-header">
            <div class="large-6 medium-6 small-6 columns no-sp">
                <div class="dn-sep">&#8220;</div>
            </div>
        </header>
        <section class="large-12 medium-12 small-12 columns no-sp">
            <h2 class="post-title">{{{title}}}</h2>
            <section class="post-content">
                {{content}}
            </section>
            <span class="post-meta">
                {{#if tags}}
                    <strong>tagged with: </strong>{{tags}}
                {{/if}}
            </span>
        </section>
        <section class="large-12 medium-12 small-12 columns no-sp">
            <div class="dn-sep-end">&#8221;</div>
        </section>
        {{/post}}
    </article>
</div>